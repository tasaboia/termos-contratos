{
  "version": 2,
  "routes": [
    {
      "src": "/api/.*",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],

  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },

    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ]
}
